<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data> 
  <record id="paperformat_nota_picking" model="report.paperformat">

      <field name="default" eval="True"/>
        <field name="name">A4 Nota Entrega Picking</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">300</field>
        <field name="page_width">240</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">85</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <template id="report_nota_picking">
            <t t-call="web.html_container">
              <t t-call="web.basic_layout" >
                <div class="page">
<table width="100%">
  <tr>
    <td valign="top">
      <table align="left">
        <tr style="font-size:14px">
          <td align="left">
            <t t-if="docs.company_id.logo">
              <img t-attf-src="data:image/*;base64,{{docs.company_id.logo}}" style="width:auto; height:90px;"/>
            </t>
          </td>
        </tr>
      </table>
    </td>
    <td valign="top" align="right" >
      <table align="left" >
        <tr style="font-size:14px" >
          <td width="150"><strong>Fecha:</strong></td>
          <td  ><strong><t t-esc="docs.formato_fecha(docs.scheduled_date)"/></strong></td>
        </tr>
        <tr style="font-size:14px"  >
          <td  ><strong>Orden/Compra:</strong></td>
          <td  ><strong><t t-esc="docs.orden_compra"/></strong></td>
        </tr>
         <tr style="font-size:14px" >
          <td  ><strong>Nota de Entrega:</strong></td>
          <td  ><strong><t t-esc="docs.name"/></strong></td>
        </tr>
      </table>

    </td>
  </tr>
</table>
  
  <br/>
<table width="100%" height="130"  style="border-collapse: separate; border-spacing: 0; border-radius: 10px; border: 1px solid black"> <!-- class="table table-bordered" -->
  <tr height="10%">
  <tr style="font-size:14px;" >
    <td ><strong>&amp;nbsp;&amp;nbsp;Cliente:&amp;nbsp;<t t-esc="docs.partner_id.name"/></strong></td>
  </tr>
   <tr style="font-size:14px;" >
    <td><strong>&amp;nbsp;&amp;nbsp;RIF:&amp;nbsp;<t t-esc="docs.partner_id.vat"/></strong></td>
  </tr>

  <tr style="font-size:14px;" >
    <td><strong>&amp;nbsp;&amp;nbsp;Direcci√≥n:&amp;nbsp;<t t-esc="docs.partner_id.street"/>,<t t-esc="docs.partner_id.street2"/></strong></td>
  </tr>

   <tr style="font-size:14px;" >
    <td><strong>&amp;nbsp;&amp;nbsp;Asesor Comercial:&amp;nbsp;<t t-esc="docs.user_id.name"/></strong></td>      
  </tr>
</tr>
</table>

        
            <br/>
            
               <table class="table table-borderless table-sm">
                  <thead class="bordeAbajo bordeArriba" >
                        <tr style="font-size:14px;">
                            <th align="left" >Producto</th>
                            <th align="left">Und.Medida</th>
                            <th align="right">Ordenado</th>
                            <th align="right">Entregado</th> 
                        </tr>
                    </thead>

                <tbody style="font-size:14px;">

                              
                    
                     
                      <t t-foreach="docs.move_line_ids_without_package" t-as="ml">
                        <tr >
                          <th align="left"  ><t t-esc="ml.product_id.display_name"/><t t-esc="ml.product_id.description_picking"/> </th>

                          <th align="left" ><span t-field="ml.product_uom_id" groups="uom.group_uom"/> </th>

                          <th align="right" >

                            <span t-if="ml.state != 'done'" t-field="ml.product_uom_qty"/>
                            <span t-if="ml.state == 'done'" t-field="ml.qty_done"/>
                                            
                         </th>
                    

                          <th align="right" >
                          <span t-if="ml.state == 'done'" t-field="ml.qty_done"/>
                          </th> 
                          
                      </tr>
                   </t>
                           
                </tbody>

                 </table>

<div class="footer">  <!--comienza el footer  -->
  <div class="bordeArriba">
<table width="100%"  height="100" > <!-- class="table table-bordered" -->
  <tr>
    <td width="65%" align="left">
      <!-- tabla 1 -->
      <br/>
      <table  width="65%" height="85"  style="border-collapse: separate; border-spacing: 0; border-radius: 10px; border: 1px solid black">
        <tr height="85">
          <td class="form-group"  align="left" height="85">
           &amp;nbsp;&amp;nbsp;Observaciones:<t t-esc="docs.note"/>
          </td>
        </tr>
      </table>
     
      <!-- fin tabla 1 -->
    </td>
    <td align="left" >
      <!-- tabla 2 -->
      <br/>
        <table width="100%" height="40" >

            <tr style="font-size:14px;">

              <td width="5"></td>       
              <td><div align="center" ><strong>__________________</strong></div></td>
              <td><div align="center" ><strong>_____________________</strong></div></td>
            </tr>
            

            <tr style="font-size:14px;">

              <td width="5"></td>       
              <td><div align="center" ><strong><samp >ENTREGADO POR</samp></strong></div></td>
              <td><div align="center" ><strong><samp >RECIBIDO CONFORME</samp></strong></div></td>
            </tr>

             <tr style="font-size:14px;">

              <td width="5"></td>       
              <td><div align="center" ><strong><samp >GRUPO SISIVENCA</samp></strong></div></td>
              <td><div align="center" ><strong><samp >FECHA Y HORA</samp></strong></div></td>
            </tr>

        </table>

      <!-- fin tabla 2-->
    </td>
  </tr>

</table>
</div>

 <table width="100%">
  <tr>
    <td colspan="8" width="100%" height="40%">
      <img src="/l10n_ve_igtf_formato_libre/static/src/img/piedepagina.png" width="472" style="height:35%; width:100%;" />
    </td>
  </tr>

</table>  

</div> <!--finaliza el footer  -->
                </div>
              </t>
            </t>
    </template>
    <report
            id="stock_picking_Nentrega"
            model="stock.picking"
            string="NOTA ENTREGA"
            report_type="qweb-pdf"
            name="l10n_ve_igtf_formato_libre.report_nota_picking"
            file="l10n_ve_igtf_formato_libre.report_nota_picking"
            paperformat="l10n_ve_igtf_formato_libre.paperformat_nota_picking"
        />

    
  
  </data>
</odoo>

