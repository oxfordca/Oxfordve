<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_dispatch_note_document">
        <t t-call="web.html_container">

            <t t-if="is_free_form">
                <t t-call="web.basic_layout">
                    <t t-call="tsc_SENIAT_dispatch_note.tsc_report_dispatch_content"/>
                </t>
            </t>
             <t t-else="">
                <t t-call="web.external_layout">
                    <t t-call="tsc_SENIAT_dispatch_note.tsc_report_dispatch_content"/>
                </t>
            </t>
        </t>
    </template>

    <template id="tsc_report_dispatch_content">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang or o.env.lang)" />
        <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
        <style>
            .page {
                font-size : 10px;
            }

            table .table {
                font-size: 9px;
            }
            .margin10 {
                margin-top: 10px;
            }
            .padding10 {
                padding-top: 10px;
            }
        </style>
        <div class="page">
            <!-- RIF -->
            <div class="row" t-if="not is_free_form">
                <div class="col text-left">
                    <p><strong>RIF: </strong><span t-field="o.company_id.vat"/></p>
                </div>
            </div>

            <!-- TITULO DOCUMENTO-->
            <div class="text-center">
                <strong>DISPATCH NOTE</strong>
            </div>

            <!-- Numero de control y encabezado antes de la tabla-->
            <div class="row">
                <div class="col-9">
                    <div>
                        <p class="m-0 p-0"><strong>Send to: </strong><span  t-field="o.partner_id.name"/></p>
                    </div>
                    <div>
                        <p class="m-0 p-0"><strong>RIF: </strong><span t-field="o.partner_id.vat"/></p>
                    </div>
                    <div>
                        <span><strong>Delivery address:</strong></span>  <t t-esc="o.partner_id.street.upper() or ''"/> <t t-esc="o.partner_id.city.upper() or ''"/>,<br/> 
                        <t t-esc="o.partner_id.state_id.name.upper() or ''"/> <t t-esc="o.partner_id.country_id.name.upper() or ''"/>
                    </div>
                </div>

                <div class="col-3">
                    <div t-if="not is_free_form">
                        <p class="m-0 p-0"><strong>Control number:</strong></p>
                        <p class="m-0 p-0" t-field="o.tsc_control_number_formated" />
                    </div>
                    <div>
                        <p class="m-0 p-0"><strong>Dispatch note no.:</strong></p>
                        <p class="m-0 p-0" t-field="o.name" />
                    </div>
                        <div t-if="o.date_done">
                        <p class="m-0 p-0"><strong>Shipping date:</strong></p>
                        <p class="m-0 p-0" t-esc="o.date_done.date()"/>
                    </div>
                </div>
            </div>

            <!-- TABLA Y CLEARFIX CUANDO EL STATE != DONE-->
            <table class="table table-sm table-condensed margin10 padding10" t-if="o.state!='done'" name="stock_move_table">
                <thead>
                    <tr>
                        <th name="th_sm_renglon"><strong>Row</strong></th>
                        <th name="th_sm_descripcion"><strong>Description</strong></th>
                        <th name="th_sm_cantidad"><strong>Quantity</strong></th>
                        <th name="th_sm_precio"><strong>Price</strong></th>
                        <th name="th_sm_monto" class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="line_number" t-value="1"/>
                    <t t-set="total_monto" t-value="0"/>

                    <t t-set="lines" t-value="o.move_lines"/>

                    <tr t-foreach="lines" t-as="move">
                        <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move.product_id.id, move.quantity_done)[1]"/>

                        <t t-set="amount" t-value="round(move.quantity_done * price, 2)"/>

                        <td>
                            <t t-esc="line_number"/>
                        </td>
                            <td>
                            <t t-esc="move.product_id.display_name"/>
                        </td>
                            <td>
                            <t t-esc="move.quantity_done"/> <t t-esc="move.product_uom.name"/>
                        </td>
                        <td>
                            <t t-esc="price"/>
                        </td>
                            <td class="text-right">
                            <t t-esc="move.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                        </td>

                        <t t-set="line_number" t-value="line_number + 1"/>
                        <t t-set="total_monto" t-value="total_monto + amount"/>
                    </tr>
                </tbody>
            </table>
            <div class="clearfix" name="so_total_summary" t-if="o.state!='done'">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                        <table class="table table-sm">
                            <tr>
                                <td>
                                    Total shipping amount: 
                                </td>
                                <td class="text-right">
                                    <t t-esc="move.company_id.currency_id.symbol"/>  <span t-esc="round(total_monto, 2)"/>
                                </td>
                            </tr>
                                <tr>
                                <td>
                                    Total amount Bs.: 
                                </td>
                                <td class="text-right">
                                    <span t-esc="round(total_monto * o.tsc_exchange_rate_dispatche_note, 2)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- TABLA Y CLEARFIX CUANDO EL STATE == DONE-->
            <table class="table table-sm table-condensed margin10 padding10" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                <t t-set="has_serial_number" t-value="False"/>
                <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_lot_on_delivery_slip"/>
                <thead>
                    <tr>
                        <th name="th_sm_renglon"><strong>Row</strong></th>
                        <th name="th_sm_descripcion"><strong>Description</strong></th>
                        <t name="lot_serial" t-if="has_serial_number">
                            <th name="th_sm_serial_number">
                                <strong>Lot/Serial Number</strong>
                            </th>
                        </t>
                        <th name="th_sm_cantidad"><strong>Quantity</strong></th>
                        <th name="th_sm_precio"><strong>Price</strong></th>
                        <th name="th_sm_monto" class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>

                    <t t-set="line_number_2" t-value="1"/>
                    <t t-set="total_monto_2" t-value="0"/>

                    <!-- This part gets complicated with different use cases (additional use cases in extensions of this report):
                        1. If serial numbers are used and set to print on delivery slip => print lines as is, otherwise group them by overlapping
                            product + description + uom combinations
                        2. If any packages are assigned => split products up by package (or non-package) and then apply use case 1 -->
                    <!-- If has destination packages => create sections of corresponding products -->
                    <t t-if="o.has_packages" name="has_packages">
                        <t t-set="packages" t-value="o.move_line_ids.mapped('result_package_id')"/>
                        <t t-foreach="packages" t-as="package">
                            <t t-call="tsc_SENIAT_dispatch_note.tsc_stock_report_delivery_package_section_line"/>
                            <t t-set="package_move_lines" t-value="o.move_line_ids.filtered(lambda l: l.result_package_id == package)"/>
                            <!-- If printing lots/serial numbers => keep products in original lines -->
                            <t t-if="has_serial_number">       
                                <tr t-foreach="package_move_lines" t-as="move_line">
                                        <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                    <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                    <td>
                                        <t t-esc="line_number_2"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.product_id.display_name"/>
                                    </td>
                                    <t t-if="has_serial_number" name="move_line_lot">
                                        <td><span t-field="move_line.lot_id.name"/></td>
                                    </t>
                                    <td>
                                        <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="price"/>
                                    </td>
                                        <td class="text-right">
                                        <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                    </td>

                                    <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                    <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                                </tr>
                            </t>
                            <!-- If not printing lots/serial numbers => merge lines with same product+description+uom -->
                            <t t-else="">
                                <t t-set="aggregated_lines" t-value="o.move_line_ids"/>
                                <tr t-foreach="aggregated_lines" t-as="move_line">
                                    <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                    <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                    <td>
                                        <t t-esc="line_number_2"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.product_id.display_name"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="price"/>
                                    </td>
                                        <td class="text-right">
                                        <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                    </td>

                                    <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                    <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                                </tr>
                            </t>
                        </t>
                        <!-- Make sure we do another section for package-less products if they exist -->
                        <t t-set="move_lines" t-value="o.move_line_ids.filtered(lambda l: not l.result_package_id)"/>
                        <t t-set="aggregated_lines" t-value="o.move_line_ids"/>
                        <t t-if="move_lines or aggregated_lines" name="no_package_move_lines">
                            <t t-call="tsc_SENIAT_dispatch_note.tsc_stock_report_delivery_no_package_section_line" name="no_package_section"/>
                            <t t-if="has_serial_number">
                                <tr t-foreach="move_lines" t-as="move_line">
                                        <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                    <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                    <td>
                                        <t t-esc="line_number_2"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.product_id.display_name"/>
                                    </td>
                                    <t t-if="has_serial_number" name="move_line_lot">
                                        <td><span t-field="move_line.lot_id.name"/></td>
                                    </t>
                                    <td>
                                        <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="price"/>
                                    </td>
                                        <td class="text-right">
                                        <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                    </td>

                                    <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                    <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                                </tr>
                            </t>
                            <t t-elif="aggregated_lines">
                                
                                <tr t-foreach="aggregated_lines" t-as="move_line">
                                    <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                    <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                    <td>
                                        <t t-esc="line_number_2"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.product_id.display_name"/>
                                    </td>
                                    <td>
                                        <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="price"/>
                                    </td>
                                        <td class="text-right">
                                        <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                    </td>

                                    <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                    <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                                </tr>
                            </t>
                        </t>
                    </t>
                    <!-- No destination packages -->
                    <t t-else="">
                        <!-- If printing lots/serial numbers => keep products in original lines -->
                        <t t-if="has_serial_number">
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                    <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                <td>
                                    <t t-esc="line_number_2"/>
                                </td>
                                <td>
                                    <t t-esc="move_line.product_id.display_name"/>
                                </td>
                                <t t-if="has_serial_number" name="move_line_lot">
                                    <td><span t-field="move_line.lot_id.name"/></td>
                                </t>
                                <td>
                                    <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                </td>
                                <td>
                                    <t t-esc="price"/>
                                </td>
                                    <td class="text-right">
                                    <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                </td>

                                <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                            </tr>
                        </t>
                        <!-- If not printing lots/serial numbers => merge lines with same product -->
                        <t t-else="" name="aggregated_move_lines">
                            <t t-set="aggregated_lines" t-value="o.move_line_ids"/>
                            <tr t-foreach="aggregated_lines" t-as="move_line">
                                <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

                                <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

                                <td>
                                    <t t-esc="line_number_2"/>
                                </td>
                                <td>
                                    <t t-esc="move_line.product_id.display_name"/>
                                </td>
                                <td>
                                    <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
                                </td>
                                <td>
                                    <t t-esc="price"/>
                                </td>
                                    <td class="text-right">
                                    <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
                                </td>

                                <t t-set="line_number_2" t-value="line_number_2 + 1"/>
                                <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <div class="clearfix" name="so_total_summary" t-if="o.move_line_ids and o.state=='done'" >
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                        <table class="table table-sm">
                            <tr>
                                <td>
                                    Total shipping amount:
                                </td>
                                <td class="text-right">
                                    <t t-esc="move_line.company_id.currency_id.symbol"/>  <span t-esc="round(total_monto_2, 2)"/>
                                    <!-- <span t-esc="round(total_monto_2, 2)"/> -->
                                </td>
                            </tr>
                                <tr>
                                <td>
                                    Total amount Bs.: 
                                </td>
                                <td class="text-right">
                                    <span t-esc="round(total_monto_2 * o.tsc_exchange_rate_dispatche_note, 2)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>


            <!-- Ordenes de retorno-->
            <t t-set="backorders" t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
            <t t-if="o.backorder_ids and backorders">
                <p class="mt-5">
                    <span>Remaining quantities not yet delivered:</span>
                </p>
                <table class="table table-sm" name="stock_backorder_table" style="table-layout: fixed;">
                    <thead>
                        <tr>
                            <th name="th_sb_product"><strong>Product</strong></th>
                            <th/>
                            <th name="th_sb_quantity" class="text-center"><strong>Quantity</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="backorders" t-as="backorder">
                            <t t-set="bo_lines" t-value="backorder.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="bo_lines" t-as="bo_line">
                                <td class="w-auto">
                                    <span t-field="bo_line.product_id"/>
                                    <p t-if="bo_line.description_picking != bo_line.product_id.name and bo_line.description_picking != bo_line.product_id.display_name">
                                        <span t-field="bo_line.description_picking"/>
                                    </p>
                                </td>
                                <td/>
                                <td class="text-center w-auto">
                                    <span t-field="bo_line.product_uom_qty"/>
                                    <span t-field="bo_line.product_uom"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>

            <!-- Mensaje -->
            <p>Calculated at the Bs/USD exchange rate: <span t-esc="round(o.tsc_exchange_rate_dispatche_note, 2)"/> as established by the BCV</p>
            <p t-field="o.tsc_reason_transfer"/>

            <p class="text-center"><strong>No right to tax credit</strong></p>
            
            <!-- Firma -->
            <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="o.partner_id.name"/>
                </div>
            </div>
            
        </div>
    </template>



    <!-- templates for easier extension + cut back on repeat code due to multiple conditionals -->
    <!-- move line(s) printing for tables -->
    <template id="tsc_stock_report_delivery_has_serial_move_line">
        <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

        <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

        <td>
            <t t-esc="line_number_2"/>
        </td>
        <td>
            <t t-esc="move_line.product_id.display_name"/>
        </td>
        <t t-if="has_serial_number" name="move_line_lot">
            <td><span t-field="move_line.lot_id.name"/></td>
        </t>
        <td>
            <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
        </td>
        <td>
            <t t-esc="price"/>
        </td>
            <td class="text-right">
            <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
        </td>

        <t t-set="line_number_2" t-value="line_number_2 + 1"/>
        <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
    </template>
    <template id="tsc_stock_report_delivery_aggregated_move_lines">

        <tr t-foreach="aggregated_lines" t-as="move_line">
            <t t-set="price" t-value="o.partner_id.property_product_pricelist.price_get(move_line.product_id.id, move_line.move_id.quantity_done)[1]"/>

            <t t-set="amount" t-value="round(move_line.move_id.quantity_done * price, 2)"/>

            <td>
                <t t-esc="line_number_2"/>
            </td>
            <td>
                <t t-esc="move_line.product_id.display_name"/>
            </td>
            <td>
                <t t-esc="move_line.move_id.quantity_done"/> <t t-esc="move_line.move_id.product_uom.name"/>
            </td>
            <td>
                <t t-esc="price"/>
            </td>
                <td class="text-right">
                <t t-esc="move_line.company_id.currency_id.symbol"/> <t t-esc="amount"/>
            </td>

            <t t-set="line_number_2" t-value="line_number_2 + 1"/>
            <t t-set="total_monto_2" t-value="total_monto_2 + amount"/>
        </tr>
    </template>


    <!-- package related "section lines" -->
    <template id="tsc_stock_report_delivery_package_section_line">
        <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
            <td colspan="99" name="package_info">
                <span t-field="package.name"/>
            </td>
        </tr>
    </template>
    <template id="tsc_stock_report_delivery_no_package_section_line">
        <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
            <td colspan="99" name="no_package_info">
                <span>Products with no package assigned</span>
            </td>
        </tr>
    </template>

    
    <template id="report_dispatch_note">
        <t t-set="is_free_form" t-value="False"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="tsc_SENIAT_dispatch_note.report_dispatch_note_document" t-lang="o.partner_id.lang or o.env.lang"/>
        </t>
    </template>

    <template id="report_dispatch_note_free_form">
        <t t-set="is_free_form" t-value="True"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="tsc_SENIAT_dispatch_note.report_dispatch_note_document" t-lang="o.partner_id.lang or o.env.lang"/>
        </t>
    </template>
</odoo>