<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_igtf_form" model="ir.ui.view">
            <field name="name">account.payment.igtf.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="amount_retention_payment"/>
                    <field name="amount_retention_journal"/>
                </xpath>
                
                <xpath expr="//field[@name='partner_bank_id'][1]" position="after">
                    <field name="move_payment_igtf" string="Asiento Cobro IGTF por Moneda Extranjera" readonly="1"
                           attrs="{'invisible': [('move_payment_igtf', '=', False)]}"/>
                    <field name="move_provider_igtf" string="Asiento IGTF Pago por Banco Proveedor" readonly="1"
                           attrs="{'invisible': [('move_provider_igtf', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>